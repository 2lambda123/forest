#!/bin/tcsh
#will be filled in by install script
set gsfarch = `/home/gsf/bin/package`
set knbarchdir = /home/gruber/knb/arch/$gsfarch

set PADSCDIR = ./
set SMLBIN = $knbarchdir/bin/smlruntime

set IMAGE = ${PADSCDIR}/lib/padsc

if ($gsfarch == linux.i386) then 
    set lua = -U__GNUC__
    set lda = -D__PREPROCESSOR_FIXES
else 
    set lua =
    set lda = 
endif

exec ${SMLBIN} @SMLload=${IMAGE} ${PADSCDIR} $* -I ${PADSCDIR}include -I /home/gsf/arch/$gsfarch/include/ast \
$lua $lda < /dev/null

