#!/bin/ksh


function insertCR {
for p in `cat $1`
do
  echo $p:
  for f in `find $p -type f`
  do
	echo Updating $f
	proto -l pads.lic -hpr -c"$2" -o author=$3 $f
  done
done
}

insertCR sml.files  '(*)' kfisher+gruber+yitzhak
insertCR caml.files '(*)' mff
insertCR pads.files '/*/' gruber+kfisher+yitzhak
insertCR padx.files '/*/' mff+gruber+yitzhak+kfisher
insertCR sh.files   '#'   kfisher+gruber

    












